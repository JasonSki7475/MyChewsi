<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <targets>
    <target name="asyncFile" xsi:type="AsyncWrapper">
      <target name="file" xsi:type="File" layout="${longdate}; ${threadid}; ${logger}; ${level}; ${message}; ${stacktrace}; ${onexception:EXCEPTION OCCURRED\:${exception:format=type,message,method:maxInnerExceptionLevel=5:innerFormat=shortType,message,method}}"
              keepFileOpen="false" fileName="${specialfolder:folder=CommonApplicationData}/Chewsi/Log.txt" encoding="utf-8"
              maxArchiveFiles="10" archiveEvery="Day" archiveNumbering="Rolling" archiveFileName="${specialfolder:folder=CommonApplicationData}/Chewsi/Log.{#}.txt" />
    </target>
  </targets>
  <rules>
    <logger name="*" minLevel="Debug" writeTo="asyncFile"/>
  </rules>
</nlog>