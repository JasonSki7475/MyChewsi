            <Grid> <!--Grid.Column="2"-->
                <Grid.Resources>
                    <Style TargetType="{x:Type TextBlock}" x:Key="TextColumnHeaderStyle">
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="TextWrapping" Value="Wrap"/>
                    </Style>
                    <Style TargetType="{x:Type TextBlock}" x:Key="ColumnStyle">
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Foreground" Value="#FF6CC2DF"/>
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0" Style="{StaticResource TextColumnHeaderStyle}" Text="Total provider submitted charge" />
                <TextBlock Grid.Column="2" Grid.Row="0" Style="{StaticResource TextColumnHeaderStyle}" Text="Total provider reimbusement" />
                <TextBlock Grid.Column="4" Grid.Row="0" Style="{StaticResource TextColumnHeaderStyle}" Text="Total subscriber charge" />
                <TextBlock Grid.Column="6" Grid.Row="0" Style="{StaticResource TextColumnHeaderStyle}" Text="Subscriber's reoccurring monthly charge" />
                <TextBlock Grid.Column="8" Grid.Row="0" Style="{StaticResource TextColumnHeaderStyle}" Text="Portion of Subscriber monthly payment applied to Chewsi fee" />
                <TextBlock Grid.Column="0" Grid.Row="2" Style="{StaticResource ColumnStyle}" Text="{Binding TotalProviderSubmittedCharge, StringFormat=c}" />
                <TextBlock Grid.Column="2" Grid.Row="2" Style="{StaticResource ColumnStyle}" Text="{Binding TotalProviderReimbursement, StringFormat=c}" />
                <TextBlock Grid.Column="4" Grid.Row="2" Style="{StaticResource ColumnStyle}" Text="{Binding TotalSubscriberCharge, StringFormat=c}" />
                <TextBlock Grid.Column="6" Grid.Row="2" Style="{StaticResource ColumnStyle}" Text="{Binding SubscribersReoccuringMonthlyCharge, StringFormat=c}" />
                <TextBlock Grid.Column="8" Grid.Row="2" Style="{StaticResource ColumnStyle}" Text="{Binding ChewsiMonthlyFee, StringFormat=c}" />
                <FlowDocumentScrollViewer Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="9" VerticalScrollBarVisibility="Hidden"
                                          Document="{Binding Note, Converter={StaticResource HighlightCalculatedPaymentsToFlowDocumentConverter}}" />
            </Grid>
        </Grid>
