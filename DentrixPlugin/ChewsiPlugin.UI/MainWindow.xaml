<Window x:Class="ChewsiPlugin.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls1="clr-namespace:ChewsiPlugin.UI.Controls"
        xmlns:viewModels="clr-namespace:ChewsiPlugin.UI.ViewModels"
        xmlns:views="clr-namespace:ChewsiPlugin.UI.Views"
        d:DataContext="{d:DesignInstance Type={x:Type viewModels:MainViewModel}}" 
        DataContext="{Binding Source={StaticResource Locator}, Path=MainViewModel}"
        mc:Ignorable="d"
        Title="Chewsi" Height="600" Width="1050" FontSize="15" MinHeight="400" MinWidth="750" Background="#FFEFEFEF">
    <Grid>
        <TabControl>
            <TabItem Header="Claims Submissions">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="5"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Column="1" Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="15"/>
                        </Grid.ColumnDefinitions>
                        <ContentControl Content="{StaticResource Logo}" Grid.Column="0"/>
                        <Button Content="Refresh" Background="#FF2D9AF9" Command="{Binding RefreshAppointmentsCommand}" Grid.Column="2" Template="{DynamicResource BlueButton}"/>
                    </Grid>
                    <DataGrid Grid.Row="3" Grid.Column="1" ItemsSource="{Binding ClaimItems}" SelectedItem="{Binding SelectedClaim}">
                        <DataGrid.Resources>
                            <controls1:BindingProxy x:Key="proxy" Data="{Binding}" />
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Posted On" IsReadOnly="True" Binding="{Binding Date, StringFormat='d'}" Width="110" />
                            <DataGridTextColumn Header="Chewsi ID" IsReadOnly="True" Binding="{Binding ChewsiId}" Width="*" />
                            <DataGridTextColumn Header="Patient" IsReadOnly="True" Binding="{Binding Patient}" Width="*" />
                            <DataGridTextColumn Header="Provider" IsReadOnly="True" Binding="{Binding Provider}" Width="*" />
                            <DataGridTemplateColumn Header="Status" Width="3*" IsReadOnly="True">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Status}" TextWrapping="Wrap" ToolTip="{Binding Status}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Action" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="Submit" Background="#FF7BD77B" BorderBrush="#FF4CAE4C" Template="{StaticResource GreenButton}"
                                                Command="{Binding Path=Data.SubmitCommand, Mode=OneWay, Source={StaticResource proxy}}"/>
                                            <Button Content="Re-Submit" Background="#FF7BD77B" BorderBrush="#FF4CAE4C" Template="{StaticResource GreenButton}"
                                                    Visibility="Collapsed"
                                                Command="{Binding Path=Data.SubmitCommand, Mode=OneWay, Source={StaticResource proxy}}"/>
                                            <Button Content="Delete" Background="#FFD9534F" BorderBrush="#FFD9534F" Template="{StaticResource RedButton}"
                                                    Visibility="Collapsed"
                                                Margin="5,0,0,0" Command="{Binding Path=Data.DeleteCommand, Mode=OneWay, Source={StaticResource proxy}}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="835 Downloads">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="5"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Column="1" Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="15"/>
                        </Grid.ColumnDefinitions>
                        <ContentControl Content="{StaticResource Logo}" Grid.Column="0"/>
                        <Button Content="Refresh" Background="#FF2D9AF9" Command="{Binding RefreshDownloadsCommand}" Grid.Column="2" Template="{DynamicResource BlueButton}"/>
                    </Grid>
                    <DataGrid Grid.Row="3" Grid.Column="1" ItemsSource="{Binding DownloadItems}" SelectedItem="{Binding SelectedDownloadItem}">
                        <DataGrid.Resources>
                            <controls1:BindingProxy x:Key="proxy" Data="{Binding}" />
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Posted On" IsReadOnly="True" Binding="{Binding Date}"  Width="180"/>
                            <DataGridTextColumn Header="Status" IsReadOnly="True" Binding="{Binding Status}"  Width="*"/>
                            <DataGridTemplateColumn Header="Action" Width="300">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Download Report" Background="#FF7BD77B" BorderBrush="#FF4CAE4C" Template="{StaticResource GreenButton}"
                                                Command="{Binding Path=Data.DownloadReportCommand, Mode=OneWay, Source={StaticResource proxy}}"/>
                                            <Button Content="Download 835" Background="#FF7BD77B" BorderBrush="#FF4CAE4C" Template="{StaticResource GreenButton}"
                                                Margin="5,0,0,0" Command="{Binding Path=Data.DownloadCommand, Mode=OneWay, Source={StaticResource proxy}}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
        <controls1:LightBox HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                            Header="Validation Failed" ButtonText="Close"
                            CloseCommand="{Binding CloseValidationPopupCommand}"
                            ButtonCommand="{Binding CloseValidationPopupCommand}"
                           Visibility="{Binding ShowValidationError, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid MaxWidth="600">
                <Grid.RowDefinitions>
                    <RowDefinition Height="57"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="65"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="2" Margin="10,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="65"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>
                    <Rectangle Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Height="2" Fill="LightGray"/>
                    <ContentControl Content="{StaticResource WarningIcon}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" Height="20" Width="20"/>
                    <TextBlock Grid.Column="3" Grid.Row="2" TextWrapping="Wrap" Text="{Binding ValidationError}"/>
                    <Rectangle Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" Height="1" Fill="LightGray"/>
                    <Grid Grid.Column="1" Grid.Row="6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Chewsi Subscriber ID"/>
                        <TextBlock Foreground="#FF6CC2DF" Grid.Row="2" Text="{Binding SelectedClaim.ChewsiId}"/>
                    </Grid>
                    <Grid Grid.Column="3" Grid.Row="6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Subscriber First Name"/>
                        <TextBlock Foreground="#FF6CC2DF" Grid.Row="2" Text="{Binding SelectedClaim.Patient}"/>
                    </Grid>
                </Grid>
            </Grid>
        </controls1:LightBox>
        <controls1:LightBox HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                            Header="Processing Payment" ButtonText="Close"
                            CloseCommand="{Binding CloseProcessingPaymentPopupCommand}"
                            ButtonCommand="{Binding CloseProcessingPaymentPopupCommand}"
                           Visibility="{Binding ShowPaymentProcessing, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid Margin="10,20" MaxWidth="600">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" TextWrapping="Wrap" Text="Validation was completed. Waiting for subscriber to approve payment. Please ask them to open the Chewsi app."/>
                <ProgressBar Grid.Row="2" Height="20" Value="50"/>
                <TextBlock Grid.Row="2" Text="{Binding PaymentProcessingMessage}" Margin="20,0" Foreground="White" FontSize="13" VerticalAlignment="Center"/>
            </Grid>
        </controls1:LightBox>
        <controls1:LightBox d:IsHidden="true" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                           Visibility="{Binding SettingsViewModel, Converter={StaticResource NullToVisibilityConverter}}"
                           Header="Settings" ButtonText="Save"
                           CloseCommand="{Binding SettingsViewModel.CloseCommand}"
                           ButtonCommand="{Binding SettingsViewModel.SaveCommand}">
            <views:SettingsView DataContext="{Binding SettingsViewModel}"/>
        </controls1:LightBox>
        <controls1:LightBox HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Header="{Binding DialogService.Message.Header}"
                            ButtonText="Ok" 
                            Visibility="{Binding DialogService.Message, Converter={StaticResource NullToVisibilityConverter}}"
                            CloseCommand="{Binding DialogService.Message.CloseCommand}"
                            ButtonCommand="{Binding DialogService.Message.CloseCommand}">
            <TextBlock Text="{Binding DialogService.Message.Text}" Width="500" TextWrapping="Wrap" MinHeight="65"/>
        </controls1:LightBox>
        <controls1:LoadingControl d:IsHidden="true" Visibility="{Binding DialogService.IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        <Button Template="{StaticResource TransparentButton}" Background="Transparent" 
                            BorderBrush="Transparent" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="7" Height="35" Width="50"
                            Command="{Binding OpenSettingsCommand}">
            <ContentControl Content="{StaticResource SettingsIcon}" />
        </Button>
    </Grid>
</Window>
